{
  "database": {
    "host": "postgres",
    "port": 5432,
    "database": "ticket_system",
    "username": "${DB_USER}",
    "password": "${DB_PASSWORD}",
    "connection_timeout": 30,
    "pool_size": 10,
    "max_overflow": 20,
    "pool_pre_ping": true
  },
  "logging": {
    "level": "INFO",
    "file_path": "./Logs",
    "max_file_size_mb": 10,
    "backup_count": 5,
    "enable_console": true,
    "enable_file": true,
    "enable_event_log": false,
    "console_colors": true
  },
  "retry": {
    "max_attempts": 3,
    "delay_seconds": 5,
    "exponential_backoff": true
  },
  "smtp": {
    "server": "${SMTP_SERVER}",
    "port": 587,
    "username": "${SMTP_USER}",
    "password": "${SMTP_PASSWORD}",
    "from_email": "${SMTP_FROM}",
    "use_tls": true
  },
  "performance": {
    "max_threads": 4,
    "max_memory_mb": 2048,
    "cpu_limit_percent": 80,
    "memory_check_interval": 60
  },
  "app": {
    "host": "0.0.0.0",
    "port": 8000,
    "secret_key": "${SECRET_KEY}",
    "token_expire_minutes": 1440,
    "cors_origins": ["*"]
  },
  "reports": {
    "default_chart_type": "bar",
    "max_data_points": 1000,
    "cache_enabled": true,
    "cache_ttl_seconds": 300
  }
}

